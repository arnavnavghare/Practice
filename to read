#include<iostream>
#include<conio.h>
#define MAX 10

using namespace std; 

class String{
private:
    char m_str[MAX];
public:
    String(){
         
    }
    void Read(){
        cin.getline(m_str, MAX); 
    }
    void Show(){
        cout<<m_str<<endl; 
    }
    int Length(){
        int cnt =0 ; 
        for(int i =0 ; m_str[i]!='\0'; i++){
            cnt++; 
        }
        return cnt ; 
    }
    void ToUpper(){
        for(int i = 0 ;m_str[i]!='\0'; i++){
            if(m_str[i]>='a' && m_str[i]<='z'){
                m_str[i]= m_str[i]-32; 
            }
        }
    }
    void ToLower(){
        for(int i = 0 ;m_str[i]!='\0'; i++){
            if(m_str[i]>='A' && m_str[i]<='Z'){
                m_str[i]= m_str[i]+32; 
            }
        }
    }        
    void Reverse(){
        int  e = Length()-1, s = 0 ; 
        char t; 
        while(s<e){
            t = m_str[e]; 
            m_str[e--]= m_str[s];
            m_str[s++]= t ; 
        }
    }
    void Copy(String &a){ /************************************************/ 
        int i;  
        for(i =0 ;m_str[i]!='\0'; i++){
            a.m_str[i]= m_str[i]; 
        }
        a.m_str[i]= '\0'; 
    }
    
    int Compare(String &a){
        int s1 = Length(); 
        int s2 = a.Length(); 
        if(s1==s2){
            return 0; 
        }
    }
    friend ostream& operator<<(ostream& out, const String& s){
        for(int i = 0 ; s.m_str[i] !='\0'; i++){
            out<<s.m_str[i]; 
        }
        return out; 
    }

}; 

int main(){

    String s, a ;
    cout<<"Enter String of  : "<<endl ; 
    s.Read(); 
    cout<<"string length is "<<s.Length()<<endl; 
    //s.Show(); 
    /*s.ToUpper(); 
    s.Show(); 
    s.ToLower();
    s.Show(); 
    s.Show();
    s.Reverse(); 
    s.Show(); 
    s.Copy(a); 
    a.Show(); */
    cout<<s; 

    getch(); 

    return 0  ; 
}
